<?xml version="1.0" encoding="utf-8" ?>
<odoo>

     <record id="view_patient_tag_tree" model="ir.ui.view">
        <field name="name">patient.tag.tree</field>
        <field name="model">patient.tag</field>

        <field name="arch" type="xml">
            <tree >
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="active"/>
            </tree>
        </field>
     </record>
    <record id="view_patient_tag_form" model="ir.ui.view">
        <field name="name">patient.tag.form</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <form>
              <sheet>
                  <group>
                      <group>
                          <field name="name"/>
                      </group>
                      <group>
                          <field name="color" widget="color_picker"/>
                          <field name="color_2" widget="color"/>
                          <field name="active" widget="boolean_toggle"/>
                      </group>
                  </group>
              </sheet>
            </form>
        </field>
    </record>
        <record id="view_patient_tag_search" model="ir.ui.view">
        <field name="name">patient.tag.search</field>
        <field name="model">patient.tag</field>

        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>
    <record id="patient_tag_act" model='ir.actions.act_window'>
        <field name="name"> appointment</field>
        <field name="res_model">patient.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p  class="o_view_nocontent_smiling_face">
                create your first patient appointment
            </p>
        </field>
    </record>

    <menuitem id="menu_patient_tag"
              name="Configuration"
               parent="menu_main_hospital"
               action ="patient_tag_act"/>


</odoo>
